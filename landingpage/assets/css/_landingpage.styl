html
  height 100%

body
  font-size 16px
  height 100%
  background url("../images/bg-stock.jpg")
  filter grayscale(20%)
  background-size 100% auto
  background-repeat no-repeat
  text-align center

.row
  margin 0 !important
  margin-bottom 3em !important

.btn-primary
  background-color color-primary !important
  border-color color-primary !important

main
  height 100%

#header
  padding 0

  img
    min-width 20em
    max-width 20%
    display block
    margin auto

  .slogan
    color black
    font-size 2em
    padding-left 0.1em
    font-family 'Ubuntu'

#description

  font-size 2.5em
  font-family 'Ubuntu'

#background-layer
  width 100%
  height 100%
  position absolute
  background-color rgba(255,255,255,.84)

#subscribe
  font-size 1.5em
  font-family 'Ubuntu'

  form
    margin-top 1em

    input
      margin auto
      max-width 20em
      margin-bottom 0.5em

    button
      width 20em
