.gallery-wrapper
  position fixed
  width 100%
  height 100vh
  top 0
  left 0
  background color_dark_opaque
  opacity 0
  z-index -50
  transition all 0.3s ease-out

  &.visible
    opacity 1
    z-index 1030

  .gallery
    width 100%
    height 100%
    position relative
    display inline-block
    overflow hidden

    .close-gallery
      position absolute
      top 1em
      right 1em
      color white
      font-size x-large

    .main-image-wrapper
      display table
      margin auto
      max-width 90%
      height 100%
      overflow hidden

      .height-adjuster
        height calc( 100% - 7em )

        .vertical-aligner
          text-align center
          position relative
          display inline-block
          height 100%
          // margin-top 40%
          // transform translateY(-50%)

          .image-navigation
            max-height 60vh
            max-width 100%
            margin-top 40vh
            transform translateY(-50%)
            img
              max-height 60vh
              max-width 100%
              // position absolute
              // transform translateX(-50%)
              // bottom 15em
            .gallery-nav
              position absolute
              top 0
              height 100%
              width 3em
              color color_dark_opaque

              i
                position absolute
                top 50%

            .gallery-nav-left
              left 0
              i
                left 0
            .gallery-nav-right
              right 0
              i
                right 0

            .image-author
              padding .5em
              // background color_dark_opaque
              position absolute
              left 0
              bottom 0
              display inline-flex
              color white

    .gallery-footer
      width 100%
      height 7em
      position fixed
      bottom 0
      overflow-x scroll
      -webkit-overflow-scrolling touch

      .gallery-images-wrapper
        display table
        margin auto

        .gallery-images
          display inline-flex

          .preview-image-wrapper
            display inline-flex
            margin .5em
            height 6em
            position relative

            &:hover .hover-indicator
              opacity .5
              cursor pointer

            .hover-indicator
              position absolute
              top 0
              left 0
              width 100%
              height 100%
              background color_primary
              opacity 0
              transition all 0.2s ease-in

            img
              height 6em
              width auto
